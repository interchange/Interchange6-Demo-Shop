<specification>
    <pattern name="in-stock" type="string">2</pattern>
    <pattern name="discount" type="string">20</pattern>
    <pattern name="rating" type="string">4.7</pattern>
    <value name="crumb" field="product.name"/>
    <value name="sku" field="product.sku"/>
    <value name="product-title" field="product.name"/>
    <value name="price-and-discount" op="toggle" args="tree" field="discount"/>
    <value name="price-before" field="product.price" filter="currency"/>
    <value name="discount" pattern="discount"/>
    <value name="price" field="selling_price" filter="currency"/>
    <value name="low-stock-alert" pattern="in-stock"/>
    <value name="product-availability"/>
    <value name="short-description" field="product.short_description"/>
    <value name="description" field="product.description"/>
    <value name="rating" field="product.average_rating" pattern="rating"/>
    <container name="product-rating-wrap" value="product.reviews.count"/>
    <container name="first-review" value="!product.reviews.count"/>
    <container name="variant-error" value="session.shop_cart_error"/>
    <container name="low-stock-alert" value="low-stock-alert"/>
    <container name="product-availability" value="product-availability"/>
    <list name="attributes" class="product-attributes-item"
        iterator="product.attribute_iterator">
        <param name="name" class="product-attributes-name" target="name"/>
        <param name="title" class="product-attributes-title"/>
        <list name="attribute_values" class="product-attributes-values-item"
            iterator="attribute_values">
            <param name="value" class="product-attributes-value" field="value"
                target="value"/>
            <param name="product-attributes-value" field="title"/>
            <param name="selected" class="product-attributes-value"
                target="selected" op="toggle"/>
        </list>
    </list>
</specification>
