<specification>
    <pattern name="discount" type="string">20</pattern>

    <container name="view-list" value="navigation-view-list">
        <list name="view-list" class="product-box-list" iterator="products">
            <container name="has-selling-price" value="selling_price"/>
            <container name="no-selling-price" value="!selling_price"/>
            <container name="instock" value="inventory"/>
            <param name="name" class="product-name"/>
            <param name="uri" class="product-name" target="href" op="append"/>
            <param name="sku" class="input-sku"/>
            <param name="price" filter="currency"/>
            <param name="selling-price" field="selling_price"
                filter="selling_price"/>
            <!--param name="sku" class="product-image" target="src"
                filter="image"/-->

            <!-- params specific to this view -->
            <param name="short_description" class="product-description"/>
            <param name="discount-list" field="discount_percent"
                pattern="discount"/>
        </list>
    </container>

    <!-- FIXME: this view is always removed since the iterator is empty -->
    <container name="view-simple" value="navigation-view-simple">
        <list name="view-simple" class="product-box-simple" iterator="products">
            <container name="has-selling-price" value="selling_price"/>
            <container name="no-selling-price" value="!selling_price"/>
            <container name="instock" value="inventory"/>
            <param name="name" class="product-name"/>
            <param name="uri" class="product-name" target="href" op="append"/>
            <param name="sku" class="input-sku"/>
            <param name="price" filter="currency"/>
            <param name="selling-price" field="selling_price"
                filter="selling_price"/>
            <!--param name="sku" class="product-image" target="src"
                filter="image"/-->

            <!-- params specific to this view -->
            <param name="discount-list" field="discount_percent"
                pattern="discount"/>
        </list>
    </container>

    <!-- FIXME: this view is always removed since the iterator is empty -->
    <container name="view-compact" value="navigation-view-compact">
        <list name="view-compact" class="product-box-compact"
            iterator="products">
            <container name="has-selling-price" value="selling_price"/>
            <container name="no-selling-price" value="!selling_price"/>
            <container name="instock" value="inventory"/>
            <param name="name" class="product-name"/>
            <param name="uri" class="product-name" target="href" op="append"/>
            <param name="sku" class="input-sku"/>
            <param name="price" filter="currency"/>
            <param name="selling-price" field="selling_price"
                filter="selling_price"/>
            <!--param name="sku" class="product-image" target="src"
                filter="image"/-->
        </list>
    </container>

    <!-- FIXME: this view is always removed since the iterator is empty -->
    <container name="view-grid" value="navigation-view-grid">
        <list name="view-grid" class="product-box-grid-row" iterator="products">
            <list name="view-row" class="product-box-grid" iterator="row">
                <container name="has-selling-price" value="selling_price"/>
                <container name="no-selling-price" value="!selling_price"/>
                <container name="instock" value="inventory"/>
                <param name="name" class="product-name"/>
                <param name="uri" class="product-name" target="href"
                    op="append"/>
                <param name="sku" class="input-sku"/>
                <param name="price" filter="currency"/>
                <param name="selling-price" field="selling_price"
                    filter="selling_price"/>
                <!--param name="sku" class="product-image" target="src"
                    filter="image"/-->
            </list>
        </list>
    </container>

    <value name="pager_total_entries" field="pager.total_entries"/>
    <value name="pager_first_entry" field="pager.first"/>
    <value name="pager_last_entry" field="pager.last"/>

    <list name="nav-sibling" iterator="nav-siblings">
        <param name="badge" field="count"/>
        <param name="link_name" class="link" field="name"/>
        <param name="link" field="uri" target="href" op="append"/>
        <param name="active" class="nav-sibling" target="class" value="active" field="selected"/>
    </list>

    <value name="per_page" iterator="per_page_iterator"/>
    <value name="order_by" iterator="order_by_iterator"/>
</specification>
