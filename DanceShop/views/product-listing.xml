<specification>
    <pattern name="discount" type="string">20</pattern>

    <list name="view-selector" class="view" iterator="views">
        <param name="name" class="view" target="value"/>
        <param name="active" class="view" target="class" op="append"/>
        <param name="icon_class" class="glyphicon" target="class"/>
        <param name="title" class="view-text"/>
    </list>

    <container name="navigation-view-compact" value="navigation-view-compact">
        <value name="navigation-view-compact" op="hook"
            include="fragments/product-listing-view-compact.html"/>
    </container>
    <container name="navigation-view-grid" value="navigation-view-grid">
        <value name="navigation-view-grid" op="hook"
            include="fragments/product-listing-view-grid.html"/>
    </container>
    <container name="navigation-view-list" value="navigation-view-list">
        <value name="navigation-view-list" op="hook"
            include="fragments/product-listing-view-list.html"/>
    </container>
    <container name="navigation-view-simple" value="navigation-view-simple">
        <value name="navigation-view-simple" op="hook"
            include="fragments/product-listing-view-simple.html"/>
    </container>

    <value name="pager_total_entries" field="pager.total_entries"/>
    <value name="pager_first_entry" field="pager.first"/>
    <value name="pager_last_entry" field="pager.last"/>

    <list name="nav-sibling" iterator="nav-siblings">
        <param name="badge" field="count"/>
        <param name="link_name" class="link" field="name"/>
        <param name="link" field="uri" target="href" op="append"/>
        <param name="active" class="nav-sibling" target="class" value="active"
            field="selected"/>
    </list>

    <value name="per_page" iterator="per_page_iterator"/>
    <value name="order_by" iterator="order_by_iterator"/>
    <value name="order_by_glyph" class="order_direction" op="hook"/>
    <value name="reverse_order" class="order_direction" target="value"/>

    <container name="pagination" value="pagination"/>
    <container name="enable_pagination_previous" value="pagination_previous"/>
    <container name="disable_pagination_previous" value="!pagination_previous"/>
    <container name="enable_pagination_next" value="pagination_next"/>
    <container name="disable_pagination_next" value="!pagination_next"/>
    <value name="pagination_previous" target="href"/>
    <value name="pagination_next" target="href"/>
    <list name="pagination" class="page" iterator="pagination">
        <container name="active" value="active">
            <param name="active" class="page" target="class" op="append"/>
        </container>
        <param name="page" class="page_number"/>
        <param name="uri" target="href" class="page_number"/>
    </list>

    <list name="facet-group" iterator="facets" value="checked">
        <param name="facet-group-title" field="title"/>
        <list name="facet" class="checkbox" iterator="values">
            <!--the following container is way too expensive with TF 0.0151
                so for now we won't use it and replace with toggled param
                with new list field-->
            <!--container name="txt-secondary" class="txt-secondary" value="!checked"/-->
            <param name="txt-secondary" field="unchecked" op="toggle" args="tree"/>
            <param name="facet-title" field="title"/>
            <param name="facet-name" field="name" target="name"/>
            <param name="facet-value" class="facet-name" field="value"
                target="value"/>
            <param name="facet-count" field="count"/>
            <param name="checked" class="facet-name" target="checked"
                op="toggle"/>
        </list>
    </list>
</specification>
